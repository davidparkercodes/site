---
import Site from '@layouts/Site.astro'
---
<Site>
  <section class="px-6 md:px-8 py-16">
    <div class="mx-auto max-w-4xl">
      <h1 class="text-3xl font-mono">contact</h1>
      <div class="mt-8 grid md:grid-cols-2 gap-12">
        <div>
          <p class="text-zinc-600 dark:text-zinc-400">
            Send a message and I will get back to you.
          </p>
          <form action="https://formspree.io/f/{{your_form_id}}" method="POST" class="mt-6 grid gap-4">
            <label class="block">
              <span class="block text-sm font-mono">name</span>
              <input name="name" required class="mt-1 w-full rounded-md border border-black/10 dark:border-white/10 bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-zinc-400/40" />
            </label>
            <label class="block">
              <span class="block text-sm font-mono">email</span>
              <input type="email" name="email" required class="mt-1 w-full rounded-md border border-black/10 dark:border-white/10 bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-zinc-400/40" />
            </label>
            <label class="block">
              <span class="block text-sm font-mono">message</span>
              <textarea name="message" rows="6" required class="mt-1 w-full rounded-md border border-black/10 dark:border-white/10 bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-zinc-400/40"></textarea>
            </label>
            <button type="submit" class="interactive inline-flex items-center justify-center rounded-md border border-black/10 dark:border-white/10 px-4 py-2 hover:bg-black/5 dark:hover:bg-white/5">
              send
            </button>
          </form>
        </div>
        <div class="space-y-6">
          <div>
            <div class="text-sm font-mono mb-2">email</div>
            <a 
              href="mailto:david@redkey.io" 
              class="text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 interactive"
            >
              <span>david</span><span>@</span><span>redkey.io</span>
            </a>
          </div>
          <div>
            <div class="text-sm font-mono mb-2">phone</div>
            <a 
              href="tel:+17572303795" 
              class="text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 interactive"
            >
              <span>(757)</span> <span>230</span>-<span>3795</span>
            </a>
          </div>
          <div>
            <div class="text-sm font-mono mb-2">location</div>
            <div class="text-zinc-600 dark:text-zinc-400">
              Virginia Beach, VA
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Site>

