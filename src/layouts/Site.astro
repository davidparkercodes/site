---
import '../styles/global.css'
import PasswordProtection from '@components/PasswordProtection.astro';

const title = 'David Parker'
const description = 'Engineer. Building fast, reliable systems and products.'
const base = import.meta.env.BASE_URL
const join = (b: string, p: string) => `${b.replace(/\/$/, '')}/${p.replace(/^\//, '')}`
---
<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#0a0a0b" />
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
    <meta name="googlebot" content="noindex, nofollow" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={join(base, 'favicon.svg')} />
    <link rel="alternate icon" href={join(base, 'favicon.ico')} />
    <style>
      :root{color-scheme: dark}
      html{background:#000000}
      body{
        background: linear-gradient(135deg, #000000 0%, #1a0033 100%);
        background-attachment: fixed;
        min-height: 100vh;
        color:#fafafa
      }
    </style>
  </head>
  <body class="text-zinc-100 antialiased">
    <PasswordProtection />
    <div class="min-h-dvh flex flex-col">
      <header class="px-6 md:px-8 py-6">
        <nav class="mx-auto max-w-4xl flex items-center justify-between gap-4">
<a href={join(base, '')} class="font-mono text-lg font-bold tracking-tight interactive hover:text-cyan-400">{title}</a>
          <div class="flex items-center gap-3">
            <a href={join(base, '')} class="font-mono text-sm interactive hover:text-cyan-400">Home</a>
            <a href={join(base, 'projects')} class="font-mono text-sm interactive hover:text-cyan-400">Projects</a>
            <a href={join(base, 'articles')} class="font-mono text-sm interactive hover:text-cyan-400">Articles</a>
            <a href={join(base, 'contact')} class="font-mono text-sm interactive hover:text-cyan-400">Contact</a>
          </div>
        </nav>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer class="relative h-40 overflow-hidden bg-transparent">
        <!-- Footer content -->
        <div class="relative z-10 h-full flex flex-col items-center justify-center text-center space-y-2">
          <div class="font-mono text-lg font-bold">David Parker</div>
          <a href="mailto:david@hiredavidparker.com" class="text-sm text-zinc-400 hover:text-cyan-400 transition-colors">david@hiredavidparker.com</a>
          <div class="flex items-center gap-3 text-sm text-zinc-400">
            <div class="flex items-center gap-1">
              <!-- Phone icon -->
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            <span> || </span>
              <!-- Message icon -->
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <span>(757) 123-4567</span>
          </div>
        </div>
        <!-- Pure lighting effects only -->
        <div class="absolute inset-x-0 -bottom-24 h-64 pointer-events-none">
          <!-- Synthwave grid perspective -->
          <div class="absolute inset-0 opacity-20">
            <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
              <defs>
                <linearGradient id="grid-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#00ffff;stop-opacity:0" />
                  <stop offset="70%" style="stop-color:#00ffff;stop-opacity:0.2" />
                  <stop offset="100%" style="stop-color:#ff00ff;stop-opacity:0.3" />
                </linearGradient>
                <pattern id="footer-grid" width="50" height="50" patternUnits="userSpaceOnUse">
                  <path d="M 50 0 L 0 0 0 50" fill="none" stroke="url(#grid-gradient)" stroke-width="0.5"/>
                </pattern>
              </defs>
              <rect width="100%" height="100%" fill="url(#footer-grid)" style="transform: perspective(300px) rotateX(60deg) translateY(-50px)" />
            </svg>
          </div>
          
          <!-- Moving light source -->
          <div class="light-source absolute w-[120%] h-[200px] -bottom-20 -left-[10%]">
            <div class="absolute inset-0 bg-gradient-radial from-cyan-400/30 via-cyan-500/15 to-transparent blur-3xl animate-light-sweep"></div>
          </div>
          
          <!-- Secondary animated glow -->
          <div class="absolute w-full h-[150px] bottom-0 left-0">
            <div class="absolute inset-0 bg-gradient-radial from-pink-500/15 via-purple-500/10 to-transparent blur-2xl animate-light-pulse"></div>
          </div>
          
          <!-- Neon accent line -->
          <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-cyan-400/50 to-transparent animate-neon-pulse"></div>
          
          <!-- Floating particles -->
          <div class="footer-particle" style="left: 10%; animation-delay: 0s;"></div>
          <div class="footer-particle" style="left: 25%; animation-delay: 2s;"></div>
          <div class="footer-particle" style="left: 40%; animation-delay: 4s;"></div>
          <div class="footer-particle" style="left: 55%; animation-delay: 1s;"></div>
          <div class="footer-particle" style="left: 70%; animation-delay: 3s;"></div>
          <div class="footer-particle" style="left: 85%; animation-delay: 5s;"></div>
          <div class="footer-particle" style="left: 95%; animation-delay: 2.5s;"></div>
        </div>
      </footer>
    </div>
    
  </body>
</html>

